<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace : dao接口的全路径 -->
<mapper namespace="com.zs.pms.dao.ChannelDao">

	<!-- 使用sql片段载入常用复用语句 -->
	<!--Selector 选择器 -->
	<sql id="selector">
		select * from tchannel
	<!-- select c1.*, c2.cname upname from tchannel c1, tchannel c2 where c1.pid = c2.id;  -->
		
	</sql>
	<sql id="where">
		<!-- 添加where标签进行自动判断 -->
		<where>
			<!-- if进行条件判断 -->
			<if test="cname!=null and cname!=''">
				and cname=#{cname}
			</if>
		</where>
	</sql>
	<!-- 排序按照id降序 -->
	<!--order by -->
	<sql id="order">
		order by id desc
	</sql>
	<!-- 分 页 转义 > : &gt; : greater than < : &lt; : less than -->
	<sql id="page">
		<where>
			<if test="start!=0">
				and rn&gt;=#{start}
			</if>
			<if test="end!=0">
				and rn&lt;=#{end}
			</if>
		</where>
	</sql>

	<!-- 根据id查询文章 -->
	<select id="queryChannelById" parameterType="int" resultType="ChannelPo">
		select * from tchannel where id =#{id}
	</select>

	<!--
	
	      登录查询 
	      多条件进行查询
  	-->
	<select id="queryChannelByCon" parameterType="ChannelQuery"
		resultType="ChannelPo">
		<!-- 使用include引入片段 -->
		<include refid="selector" />
		<include refid="where" />
	</select>


	<!--利用sql片段制作分页模版 -->
	<select id="queryChannelByPage" parameterType="ChannelQuery"
		resultType="ChannelPo">
		select t1.* from (select rownum rn,t.* from
		(
		<include refid="selector" />
		<include refid="where" />
		<include refid="order" />
		)
		t) t1
		<include refid="page" />
	</select>

	<!--计算总条数 -->
	<select id="queryByCount" parameterType="ChannelQuery"
		resultType="int">
		select count(1) from tchannel <!--可以使用索引 -->
		<include refid="where" />
	</select>

	<!-- 根据id进行删除 -->
	<select id="deleteChannelById">
		delete from tchannel where id=#{id}
	</select>

	<!-- 批量删除 -->
	<delete id="deletesChannel">
		delete from tchannel where id in
		<!-- 拼in的条件
		 collection：容器类型
         item：循环后的临时变量名
          open：从...开始 
          close：从...结束 
          separator：分隔符 -->
		<foreach collection="array" item="id" open="(" close=")"
			separator=",">
			#{id}
		</foreach>
	</delete>

	<!-- 修改数据 -->
	<update id="updateChannel" parameterType="ChannelPo">
		update tchannel
		<!-- 有就改没有就不拼 -->
		<set>
			<!-- if进行条件判断 -->
			<if test="cname!=null and cname!=''">
				cname=#{cname},
			</if>
			<if test="pid!=null and pid!=0">
				pid=#{pid},
			</if>
			<if test="lev!=null and lev!=0">
				lev=#{lev},
			</if>
			<if test="isleaf!=null and isleaf!=0">
				isleaf=#{isleaf},
			</if>
			<if test="sort!=null and sort!=0">
				sort=#{sort},
			</if>
		</set>
		where id=#{id}
	</update>


	<!-- 新增数据 -->
	<insert id="insertChannel" parameterType="ChannelPo">
		<!-- 使用序列自增 -->
		<selectKey keyProperty="id" order="BEFORE" resultType="int">
			select sep_channel.nextval from dual
		</selectKey>
		insert into tchannel values
		(#{id},#{cname},#{pid},#{lev},#{isleaf},#{sort})
	</insert>

</mapper>